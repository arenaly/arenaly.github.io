{
  "manifest_version": 3,
  "name": "Contextual Korean Translator",
  "version": "1.0",
  "description": "Translates selected English text to Korean, providing cultural context and background information.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["toolbar.css"]
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "options.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ]
}
