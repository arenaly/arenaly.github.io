{
  "manifest_version": 3,
  "name": "Korean Translator with Context",
  "description": "Translate highlighted text into Korean and provide cultural context using an LLM.",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ]
}
